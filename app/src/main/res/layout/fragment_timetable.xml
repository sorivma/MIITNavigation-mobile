<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TimetableFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="382dp"
            android:layout_height="48dp"
            android:background="@drawable/viewshape1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias="0.023" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintVertical_bias="0.533" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/time_table"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="290dp"
            app:layout_constraintTop_toBottomOf="@+id/week_selector"
            tools:listitem="@layout/item_timetable_class" />

        <Button
            android:id="@+id/group_selector"
            android:layout_width="382dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:text="Группа"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/week_selector"
            app:layout_constraintTop_toBottomOf="@id/group_selector"
            app:layout_constraintEnd_toEndOf="@id/group_selector"
            app:layout_constraintStart_toStartOf="@id/group_selector"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            app:singleSelection="true"

            android:layout_height="wrap_content">

            <Button
                android:id="@+id/week_one"
                style="@style/ShapeAppearanceOverlay.Material3.Button"
                android:layout_width="181dp"
                android:layout_height="48dp"
                android:text="1 Неделя"/>

            <Button
                android:id="@+id/week_two"
                style="@style/ShapeAppearanceOverlay.Material3.Button"
                android:layout_width="181dp"
                android:layout_height="48dp"
                android:text="2 Неделя"/>

        </com.google.android.material.button.MaterialButtonToggleGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>